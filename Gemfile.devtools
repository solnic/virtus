group :development do
  gem 'rake',    '~> 10.0'
  gem 'rspec',   '~> 2.12.0'
  gem 'yard',    '~> 0.8.3'
end

group :guard do
  gem 'guard',         '~> 1.5.4'
  gem 'guard-bundler', '~> 1.0.0'
  gem 'guard-rspec',   '~> 2.1.1'
  gem 'rb-inotify', :git => 'https://github.com/mbj/rb-inotify'
end

group :benchmarks do
  gem 'rbench', '~> 0.2.3'
end

platform :jruby do
  group :jruby do
    gem 'jruby-openssl', '~> 0.7.4'
  end
end

group :metrics do
  gem 'flay',      '~> 1.4.2'
  gem 'flog',      '~> 2.5.1'
  gem 'reek',      '~> 1.2.8', :git => 'https://github.com/dkubb/reek.git'
  gem 'roodi',     '~> 2.1.0'
  gem 'yardstick', '~> 0.8.0'
  gem 'mutant',    '~> 0.2.6'

  platforms :ruby_18, :ruby_19 do
    # this indirectly depends on ffi which does not build on ruby-head
    gem 'yard-spellcheck', '~> 0.1.5'
  end

  platforms :mri_19 do
    gem 'simplecov',   '~> 0.7'
  end

  platforms :rbx do
    gem 'pelusa', '~> 0.2.1'
  end
end
